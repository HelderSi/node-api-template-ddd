{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./build",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "modules/*": [
        "modules/*"
      ],
      "config/*": [
        "config/*"
      ],
      "shared/*": [
        "shared/*"
      ],
      "utils/*": [
        "utils/*"
      ]
    }
  }
}
{
  "name": "node-ddd-api-template",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:HelderSi/node-ddd-api-template.git",
  "author": "Helder Silva <helder.dds@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "celebrate": "^15.0.0",
    "cors": "^2.8.5",
    "dayjs": "^1.10.6",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "swagger-ui-express": "^4.1.6",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import-helpers": "^1.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "prettier": "^2.3.2",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "scripts": {
    "start": "docker-compose up",
    "stop": "docker-compose stop",
    "dev": "ts-node-dev -r tsconfig-paths/register --transpile-only --ignore-watch node_modules --respawn src/shared/infra/http/server.ts",
    "build": "babel src --extensions \".js,.ts\" --out-dir build --copy-files",
    "cli:build": "yarn tsc ./scripts/*.ts --outDir ./bin",
    "cli": "yarn scripts:build && node ./bin/index.js ",
    "docker:build": "docker build -t node-ddd-api-template .",
    "docker:run": "docker run --name template_api -p 3333:3333 node-ddd-api-template",
    "docker:stop": "docker stop template_api",
    "docker:remove": "docker rm template_api",
    "docker:container:bash": "docker exec -it template_api /bin/bash",
    "docker:container:exec": "docker exec -it template_api"
  }
}

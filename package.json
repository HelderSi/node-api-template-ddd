{
  "name": "node-ddd-api-template",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:HelderSi/node-ddd-api-template.git",
  "author": "Helder Silva <helder.dds@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "celebrate": "^15.0.0",
    "cors": "^2.8.5",
    "dayjs": "^1.10.6",
    "dotenv": "^16.0.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "swagger-jsdoc": "^6.2.1",
    "swagger-ui-express": "^4.1.6",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.14.8",
    "@babel/node": "^7.14.7",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-proposal-decorators": "^7.14.5",
    "@babel/preset-env": "^7.14.8",
    "@babel/preset-typescript": "^7.14.5",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/supertest": "^2.0.11",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-transform-typescript-metadata": "^0.3.2",
    "eslint": "^8.9.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import-helpers": "^1.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "scripts": {
    "start": "docker-compose up --build",
    "stop": "docker-compose stop",
    "down": "docker-compose down",
    "services:build": "docker-compose build",
    "services:remove": "docker-compose rm -f",
    "dev": "ts-node-dev -r tsconfig-paths/register --transpile-only --ignore-watch node_modules --respawn src/shared/infra/http/server.ts",
    "build": "babel src --extensions \".js,.ts\" --out-dir build --copy-files",
    "cli:build": "babel scripts --extensions \".js,.ts\" --out-dir bin --copy-files",
    "cli": "yarn cli:build && node ./bin/index.js ",
    "docker:build": "docker build -t node-ddd-api-template .",
    "docker:run": "docker run --name template_api -p 3333:3333 node-ddd-api-template",
    "docker:stop": "docker stop template_api",
    "docker:remove": "docker rm template_api",
    "docker:container:bash": "docker exec -it template_api /bin/bash",
    "docker:container:exec": "docker exec -it template_api",
    "jest:init": "jest --init",
    "test": "NODE_ENV=test jest --verbose --color"
  }
}
